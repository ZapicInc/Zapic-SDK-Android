<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/component_zapic_app_bar_elevation"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/component_zapic_app_bar_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_zapic_app_bar_gradient_height"
            android:layout_alignParentStart="true"
            android:background="@drawable/zapic_gradient_animation" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/component_zapic_app_bar_height"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/component_zapic_app_bar_gradient">

            <ImageButton
                android:id="@+id/component_zapic_app_bar_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/component_zapic_app_bar_close_margin"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/component_zapic_app_bar_close"
                android:src="@drawable/zapic_close_24dp" />

            <ImageView
                android:layout_width="@dimen/component_zapic_app_bar_logo_size"
                android:layout_height="@dimen/component_zapic_app_bar_logo_size"
                android:layout_centerInParent="true"
                android:contentDescription="@string/component_zapic_app_bar_logo"
                android:src="@drawable/zapic_logo_64dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
